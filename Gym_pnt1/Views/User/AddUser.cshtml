@using Gym_pnt1.Models.Entities;
@model Client

<h1>CREAR CLIENTE</h1>
<form asp-action="AddUser">

    <div class="form-group">
        <label asp-for="Name">Nombre</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Apellido</label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Fecha de nacimiento</label>
        <input asp-for="BirthDate" class="form-control" />
    </div>

        <div>
        <label asp-for="MembershipId">Membresía</label>
        <select asp-for="MembershipId" class="form-select" aria-label="Default select example">
        <option selected>Open this select menu</option>
            <option value="0">Gold</option>
            <option value="1">Silver</option>
            <option value="2">Bronze</option>
        </select>
        </div>

    <div>
        <br />
        <button type="submit" class="btn btn-primary">Aceptar</button>
    </div>
</form>
